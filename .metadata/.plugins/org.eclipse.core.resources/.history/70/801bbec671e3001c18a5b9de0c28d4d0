package repeticao;

import java.util.Scanner;

public class MediaSentinela {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		double total = 0;
		int contador = 0;
		
		System.out.println("Digite uma nota ou -1 para sair: ");
		double nota = sc.nextDouble();
		
		while(nota != -1) {
			total += nota;
			contador++;
			
			System.out.println("Digite uma nota ou -1 para sair: ");
			double nota = sc.nextDouble();
			
		}
		
		sc.close();

	}

}
