package sequencial;

import java.util.Scanner;

public class DescontoINSS {

	public static void main(String[] args) {
		
		double salarioBruto, salarioLiquido;
		double percentual = 11;
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite o salário bruto: ");
		salarioBruto = sc.nextDouble();
		
		salarioLiquido = salarioBruto * (1 - percentual/100);
		
		System.out.printf("O salário bruto é de R$%.2f e o salário líquido é de R$%.2f, "
				+"com o desconto de %.0f"+"%"+"por cento do INSS.",salarioBruto, salarioLiquido, percentual);
		
		sc.close();

	}

}
